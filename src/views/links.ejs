<!--aqui vamos a hacer la interfaz de links -->
<div class="content">
  <div class="row">
    <div class="col-12">
      <div class="card card-chart">
        <html>
          <head>
            <meta
              name="viewport"
              content="width=device-width, initial-scale=1"
            />
            <link rel="stylesheet" href="/public/generarLink.css" />
          </head>
          <body>
            <br />
            <br />
          <div class="contenedor-botones">
              <span class="texto-izquierda">Links creados</span>
              <button id="abrirModal" class="boton-modal">Generar enlace</button>
          </div>

          <div class="cuadrado"></div>
            <!-- Ventana modal, por defecto no visiblel -->
            <div id="ventanaModal" class="modal">
              <div class="contenido-modal">
                <span class="cerrar">&times;</span>

                <div class="form-container">
                  <h1 class="form-title">Generador de Link</h1>
                  <form action="/api/generarLink" method="POST" required="true">
                      <div class="input-container">

                        <input
                          type="text"
                          id="nombre"
                          name="nombre"
                          placeholder="Nombre del cliente"
                          required
                        />
                      </div>
                    
                      <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Email del cliente"
                        required
                      />
                    
                    
                      <div class="input-container">
                        <input
                          type="text"
                          id="telefono"
                          name="telefono"
                          placeholder="Teléfono del cliente"
                          required
                        />
                      </div>
                   
                    
                      <input
                        type="text"
                        id="monto"
                        name="monto"
                        placeholder="Monto"
                        required
                      />
                    
                    <li>
                      <input
                        type="radio"
                        id="mes"
                        name="meses"
                        value="1"
                        disabled
                      />
                      <label for="mes3">Pago único</label>
                    </li>
                    <li>
                      <input
                        type="radio"
                        id="mes"
                        name="meses"
                        value="3"
                        disabled
                      />
                      <label for="mes0">3 meses</label>
                    </li>
                    <li>
                      <input
                        type="radio"
                        id="mes"
                        name="meses"
                        value="6"
                        disabled
                      />
                      <label for="mes1"> 6 meses</label>
                    </li>
                    <li>
                      <input
                        type="radio"
                        id="mes"
                        name="meses"
                        value="12"
                        disabled
                      />
                      <label for="mes2">12 meses</label>
                    </li>

                    <br />

                    <textarea
                      id="descripcion"
                      name="descripcionTextArea"
                      rows="2"
                      cols="30"
                      placeholder="Descripcion"
                      required
                    ></textarea>
                    <br />

                    <div class="input-container">
                      <button id="generar" class="generar">Generador</button>
                      
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <script src="/public/script-link.js"></script>
          </body>
        </html>
      </div>
    </div>
  </div>
</div>
