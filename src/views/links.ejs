                      <label for="mes1"> 6 meses</label>
                    </li>
                    <li>
                      <input type="radio" id="mes" name="meses" value="12" disabled />
                      <label for="mes2">12 meses</label>
                    </li>
      
                    <br />
      
                    <textarea
                      id="descripcion"
                      name="descripcionTextArea"
                      rows="2"
                      cols="30"
                      placeholder="Descripcion"
                      required
                    ></textarea>
                    <br />
      
                    <div class="input-container">
                      <button>Generador</button>
                    </div>
                  </form>
                </div>
      
                <div>
                  <form action="/logout" method="POST">
                    <button>Logout</button>
                  </form>
                </div>
              </div>
