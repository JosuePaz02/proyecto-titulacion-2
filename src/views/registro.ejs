       <script>
        function validateForm() {
            const requiredFields = ["first_name", "last_name", "email", "password", "tel_area", "tel_number"];
            let isValid = true;

            for (const fieldName of requiredFields) {
                const inputField = document.getElementById(fieldName);
                if (inputField.value.trim() === "") {
                    alert(`El campo ${fieldName.replace('_', ' ')} es obligatorio.`);
                    isValid = false;
                    break;
                }
            }

            if (isValid) {
                // Aquí puedes agregar lógica adicional o enviar el formulario
                alert("Formulario válido. Enviar datos al servidor...");
            }
        }
    </script>

